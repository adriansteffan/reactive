    "react-dom": "^18.2.0",
    "react-icons": "^5.1.0",
    "react-toastify": "^10.0.6",
    "survey-react-ui": "^1.12.9",
    "uuid": "^11.0.3"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.3"
